<link href="~/css/login.css" rel="stylesheet" type="text/css" />
<div class="modal fade" id="forgetModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title logo_text">LILLI URL</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-danger"id="check"></div>
                <div class="text-success"id="success"></div>
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Email<span class="text-danger">*</span> </label>
                        <input type="email" id="CPE" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">New Password<span class="text-danger">*</span> </label>
                        <input type="password" id="NP" required class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Confirm New Password<span class="text-danger">*</span> </label>
                        <input type="password" id="CNP"required class="form-control">
                    </div>
                    <div class="form-group form-button">
                        <button type="button" onclick="ChangePassword()"  class="btn btn-block">Forget Password</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>
